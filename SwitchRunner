package com.cognixia.jump.corejava.flowcontrol;

public class SwitchRunner {
	public static void main(String[] args) {

		int condition = 1;
//		int condition = 2;
//		int condition = 3;
//		int condition = 4;
//		int condition = 5;
//		int condition = 6;
//		int condition = 7;
//		int condition = 8;
//		int condition = 9;
		
//		The condition of the switch can be an int, char, string, or enum
		switch (condition) {
		case 1:
			System.out.println("You will see this only if condition is 1");
			break;
		case 2:
			System.out.println("You will see this only if condition is 2");
			break;
		case 3:
			System.out.println("You will see this only if condition is 3");
		case 4:
			System.out.println("You will see this if condition is 3 or 4");
			break;
		case 7:
		case 9:
			System.out.println("You will see this if condition is 7 or 9");
			break;
		default:
			System.out.println("condition did not match anything");
			break;

		}
		
	}

}